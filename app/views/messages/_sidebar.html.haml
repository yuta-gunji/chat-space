.sidebar
  .sidebar_user
    %p.sidebar_user__name
      - if user_signed_in?
        = current_user.name
    %ul.sidebar_user__icon
      %li.sidebar_user__icon__list
        = link_to edit_user_path(current_user) do
          %i.fa.fa-cog
      %li.sidebar_user__icon__list
        = link_to new_group_path do
          %i.fa.fa-pencil-square-o
  .sidebar_groups
    %ul.sidebar_groups__list
      = render @groups
